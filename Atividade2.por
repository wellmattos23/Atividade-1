algoritmo "Calcula Média"

var

nome: caracter
idade: inteiro
n1, n2, n3, n4, media: real

inicio

escreval("Informe seu nome: ")
leia(nome)
escreval ("Informe sua idade: ")
leia(idade)
escreval ("Informe a sua primeira nota: ")
leia(n1)
escreval ("Informe a sua segunda nota: ")
leia(n2)
escreval ("Informe a sua terceira nota: ")
leia(n3)
escreval ("Informe a sua quarta nota: ")
leia(n4)

media <- (n1+n2+n3+n4)/4

escreval ("Nome: ", nome)
escreval ("Idade: ", idade, " anos")
escreval ("Primeira nota: ", n1)
escreval ("Primeira nota: ", n2)
escreval ("Primeira nota: ", n3)
escreval ("Primeira nota: ", n4)
escreval ("Média: ", media)

fimalgoritmo


